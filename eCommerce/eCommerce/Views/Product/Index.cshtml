
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <title>Index</title>
    <link rel="stylesheet" href="/Content/css.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>

<body>

    <h2>Index</h2>
    <a href="/Product/Cart" class="btn btn-info">
        <span class="glyphicon
                        glyphicon-shopping-cart">
        </span>Show Cart
    </a>
    <a href="@Url.Action("Cart", "Product")">Continue Shopping</a>
    <div>
        <table class="table">

            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Quantity</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            @foreach (var it in Model)
            {
                <tr>
                    <td>@it.Id</td>
                    <td>@it.Name</td>
                    <td>@it.Price</td>
                    <td>@it.Qty</td>
                    <td>
                        <a href="/Product/Edit/@it.Id" class="btn btn-success "><i class="bi-pencil-square"></i>Edit</a>
                        <a href="/Product/Delete/@it.Id" class="btn btn-danger "><i class="bi bi-trash"></i>Delete</a>

                    </td>
                    <td>
                        <a href="/Product/Product/@it.Id" class="btn btn-info">
                            <span class="glyphicon
                        glyphicon-shopping-cart">
                            </span>Details
                        </a>
                        <input type="submit" value="Add To Cart" class="btn btn-info" />
                        @*@Html.ActionLink("Add products to cart", "Bye", new { id = it.Id })*@
                        <a href="@Url.Action("Buy", "Product", new { id = it.Id })">Buy Now</a>
                    </td>

                </tr>
            }

        </table>
    </div>
</body>

</html>


